{
  "name": "rawcan",
  "version": "0.1.11",
  "description": "Bindings for SocketCAN",
  "author": {
    "name": "Joe Kramer",
    "email": "joe.kramer.cu@gmail.com"
  },
  "main": "dist/rawcan.js",
  "typescript": {
    "definition": "dist/rawcan.d.ts"
  },
  "scripts": {
    "configure": "node-gyp configure",
    "build:gyp": "node-gyp build",
    "build:js": "mkdir -p build/lib && ln -sf ../../dist/can_wrap.js build/lib && tsc",
    "build": "npm run build:gyp && npm run build:js",
    "preversion": "npm test && cp build/lib/rawcan.* dist",
    "watch": "npm run build:js -- --watch",
    "pretest": "npm run build",
    "test": "NODE_ENV=test mocha build/test --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jjkr/rawcan.git"
  },
  "keywords": [
    "CAN"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jjkr/rawcan/issues"
  },
  "homepage": "https://github.com/jjkr/rawcan#readme",
  "os": [
    "linux"
  ],
  "dependencies": {
    "bindings": "^1.2.1",
    "nan": "^2.2.0"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "mocha": "^2.3.4",
    "tsd": "^0.6.5",
    "typescript": "^1.7.5"
  }
}
